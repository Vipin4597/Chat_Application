<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/img_gfgsu"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/gfg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>

    <EditText
        android:id="@+id/edt_name"
        android:background="@drawable/edt_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/img_gfgsu"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:hint="Name"/>

    <EditText
        android:id="@+id/edt_emailsu"
        android:background="@drawable/edt_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edt_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:hint="Email"/>

    <EditText
        android:id="@+id/edt_passwordsu"
        android:background="@drawable/edt_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edt_emailsu"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:hint="Password"/>

    <Button
        android:id="@+id/btn_signupsu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edt_passwordsu"
        android:text="Sign Up"
        android:textSize="18sp"
        android:background="@drawable/btn_background"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>



</RelativeLayout>